{
  "name": "confluence-cms-api",
  "version": "0.19.4",
  "description": "Enterprise public viewer for your Confluence pages",
  "author": "Jose Gascon",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --list-different \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 3",
    "test": "npm run test:unit:cov && npm run test:e2e",
    "test:unit:watch": "jest --watch",
    "test:unit:cov": "jest --coverage",
    "test:unit:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest-e2e.json --runInBand --forceExit",
    "docs:prebuild": "rimraf docs/.vuepress/dist",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "npm run docs:prebuild && npm run docs:build && gh-pages -d docs/.vuepress/dist",
    "copy:static": "cpx 'static/**' 'dist/static'"
  },
  "dependencies": {
    "@nestjs/common": "7.6.15",
    "@nestjs/config": "0.6.3",
    "@nestjs/core": "7.6.15",
    "@nestjs/platform-express": "7.6.15",
    "@nestjs/serve-static": "2.1.4",
    "@nestjs/terminus": "7.1.2",
    "cheerio": "1.0.0-rc.3",
    "cache-manager": "3.4.3",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "node-sass-middleware": "0.11.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "7.6.15",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@types/cache-manager": "3.4.0",
    "@types/cheerio": "=0.22.10",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "@vuepress/plugin-back-to-top": "1.8.2",
    "cpx": "1.5.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "gh-pages": "3.1.0",
    "jest": "26.6.3",
    "markdown-it-task-lists": "2.1.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "ts-jest": "26.5.4",
    "ts-loader": "8.1.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.3",
    "vuepress": "1.8.2"
  },
  "jest": {
    "setupFiles": [
      "./setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
